@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">




            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">
                        <table class="table">
                            <a asp-action="Create" class="btn btn-outline-primary">Create</a>
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">DescriptionENG</th>
                                    <th scope="col">Price</th>



                                </tr>
                            </thead>
                            <tbody>
                                @{int count = 1;
                                    @foreach (var item in Model)
                                    {
                                <tr>

                                    <th scope="row">@count</th>

                                    @if (@item.Description.Length > 20)
                                    {
                                        <td>@item.Description.Substring(0, 20)</td>
                                    }
                                    else
                                    {
                                        <td>@item.Description</td>
                                    }
                                    @if (@item.DescriptionENG.Length > 20)
                                    {
                                        <td>@item.Description.Substring(0, 20)</td>
                                    }
                                    else
                                    {
                                        <td>@item.DescriptionENG</td>
                                    }






                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-eye"></i></a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-trash-o"></i></a>


                                    </td>
                                </tr>
                                        count++;
                                    }

                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>






        </div>
    </div><!-- .animated -->
</div>

