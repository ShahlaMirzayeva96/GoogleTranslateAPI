@model  Product
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionENG"></label>
                    <textarea asp-for="DescriptionENG" class="form-control"></textarea>
                    <span asp-validation-for="DescriptionENG" class="text-danger"></span>
                </div>
              

                <button type="submit" class="au-btn au-btn-icon au-btn--green au-btn--small btn btn-success">
                    <i class="zmdi zmdi-plus"></i>Update
                </button>
            </form>
        </div>
    </div>
</div>


